<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".FuelCardActivity">
    <LinearLayout
        android:padding="5dp"
        android:weightSum="3"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:id="@+id/title_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight=".97"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ccms_balance_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ccms_balance_str"
                android:textColor="@color/sky_blue"/>
            <Button
                android:layout_margin="2dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:id="@+id/rechargeBtn"
                android:textColor="@color/white"
                android:text="@string/recharge"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/alertbtnbg"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight=".97"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/loyalitypoints_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loyality_str"
                android:textColor="@color/sky_blue"/>
            <Button
                android:id="@+id/redeem_btn"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_margin="2dp"
                android:textColor="@color/white"
                android:text="@string/redeem"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/alertbtnbg"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

        <Button
            android:id="@+id/reportBtn"
            android:layout_weight="1.06"
            android:textColor="@color/actionbar_clr"
            android:text="@string/report"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/errordialog_bg"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:padding="2dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fuel_rv"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:layout_below="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView">
    </android.support.v7.widget.RecyclerView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/eg_banner"
        android:visibility="gone">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
