<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:id="@+id/header">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionbar_clr"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">
                <Button
                    android:id="@+id/backbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/erp_back_btn"
                    android:gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_5"
                    android:onClick="callback"/>
                <TextView
                    android:id="@+id/header_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EasyGaadi"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:layout_toRightOf="@+id/backbtn"
                    android:layout_toLeftOf="@+id/mailBtn"/>
                <ImageView
                    android:id="@+id/mailBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/erp_mail"
                    android:layout_alignParentRight="true"
                    android:text="Send MAil"
                    android:layout_margin="@dimen/margin_5"/>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/formLL"
            android:layout_below="@+id/header"
            android:layout_above="@+id/sub_payments_footer"
            android:background="#e1e1e1">
            <LinearLayout
                android:id="@+id/sub_payments_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/expencese_title_bg"
                android:weightSum="5"
                android:padding="3dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/date_tv"
                    android:textColor="@android:color/black"
                    android:background="@color/white"
                    android:textSize="@dimen/secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:text="Date"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <TextView
                    android:id="@+id/tripid_tv"
                    android:textColor="@android:color/black"
                    android:background="@color/white"
                    android:textSize="@dimen/secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:text="Ttrip ID"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <TextView
                    android:id="@+id/echnum_tv"
                    android:textColor="@android:color/black"
                    android:background="@color/white"
                    android:textSize="@dimen/secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:text="V.no"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <TextView
                    android:id="@+id/freight_tv"
                    android:textColor="@android:color/black"
                    android:background="@color/white"
                    android:textSize="@dimen/secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:text="Freight"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                <TextView
                    android:id="@+id/paid_tv"
                    android:textColor="@android:color/black"
                    android:background="@color/white"
                    android:textSize="@dimen/secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:text="Paid"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/progressFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/quotes_rc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/etSearch"
                >

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/sub_payments_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/erp_footer_bg"
        android:weightSum="5"
        android:padding="3dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/vdate_tv"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:textSize="@dimen/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/vtripid_tv"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:textSize="@dimen/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="Ttrip ID"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/vechnum_tv"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:textSize="@dimen/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="Total"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/vfreight_tv"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:textSize="@dimen/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="Freight"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/vpaid_tv"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:textSize="@dimen/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="Paid"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>
</RelativeLayout>