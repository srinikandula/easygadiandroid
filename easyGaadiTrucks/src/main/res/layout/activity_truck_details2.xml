<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:id="@+id/header">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionbar_clr"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">
                <Button
                    android:id="@+id/backbtn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/erp_back_btn"
                    android:gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_5"
                    android:onClick="callback"/>
                <TextView  android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Truck Details"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:layout_toRightOf="@+id/backbtn"/>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/btmbutns"
        android:id="@+id/form">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/formLL"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/erp_details_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="top">
                    <TextView
                        android:id="@+id/truckRegNo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/tratruck_icon"
                        android:ems="6"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="top">
                    <TextView
                        android:id="@+id/truck_reg_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_reg"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/txt_black"
                        android:gravity="left"
                        android:visibility="visible"/>
                        <TextView
                            android:id="@+id/truck_res_ton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:hint="xxT xxxx"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/txt_black"
                            android:gravity="left"
                            android:visibility="visible"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/erp_editbutton"
                            android:onClick="callback"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/erp_details_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="top">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:text="@string/truck_type"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/truck_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_type"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:cursorVisible="false"
                        android:padding="10dp"
                        android:layout_weight="0.6"
                        android:background="@null"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/erp_details_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="top">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:text="@string/truck_fexpiry"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/fitnessExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_fexpiry"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:layout_weight="0.6"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/erp_details_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="top">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:text="@string/truck_perexpiry"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/truck_permit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_perexpiry"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:layout_weight="0.6"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/erp_details_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="top">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:text="@string/truck_insexpiry"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/truck_ins"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_insexpiry"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:layout_weight="0.6"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/erp_details_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="top">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:text="@string/truck_pollexpiry"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/truck_pollexpiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_pollexpiry"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/txt_black"
                        android:gravity="left|center"
                        android:padding="10dp"
                        android:layout_weight="0.6"
                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>