<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:id="@+id/header">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionbar_clr"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">
                <Button
                    android:id="@+id/backbtn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/erp_back_btn"
                    android:gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_5"
                    android:onClick="callback"/>
                <TextView  android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Truck"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical"
                    android:layout_toRightOf="@+id/backbtn"/>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/btmbutns"
        android:id="@+id/form">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/formLL"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_5">
            <FrameLayout
                android:id="@+id/progressFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_reg_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_reg"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <EditText
                        android:id="@+id/truck_reg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:hint="@string/truck_reg"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/erp_etborder"
                        android:layout_weight="1"
                        android:inputType="text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_type_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_type"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <EditText
                    android:id="@+id/truck_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/erp_height"
                    android:hint="@string/truck_type"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/margin_5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:background="@drawable/erp_etborder"
                    android:layout_weight="1"
                    android:inputType="text"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_modellbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_model"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <EditText
                        android:id="@+id/truck_model"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:layout_margin="@dimen/padding_5"
                        android:hint="@string/truck_model"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/erp_etborder"
                        android:layout_weight="1"
                        android:inputType="text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_tonnagelbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_tonnage"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <EditText
                        android:id="@+id/truck_tonnage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:layout_margin="@dimen/padding_5"
                        android:hint="@string/truck_tonnage"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@drawable/erp_etborder"
                        android:layout_weight="1"
                        android:inputType="number"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_fexpirelbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_fexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/truck_fexpire"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:background="@drawable/erp_etborder"
                        android:hint="@string/truck_fexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_insexpirelbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_insexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/truck_insexpire"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:background="@drawable/erp_etborder"
                        android:hint="@string/truck_insexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_perexpirelbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_perexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/truck_perexpire"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:background="@drawable/erp_etborder"
                        android:hint="@string/truck_perexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_pollexpirelbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_pollexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/truck_pollexpire"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:background="@drawable/erp_etborder"
                        android:hint="@string/truck_pollexpire"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/truck_duetaxlbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/truck_duetax"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/truck_duetax"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:background="@drawable/erp_etborder"
                        android:hint="@string/truck_duetax"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/margin_5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5">
                    <TextView
                        android:id="@+id/driver_fname_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_5"
                        android:hint="@string/driver_fname"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/actionbar_clr"
                        android:gravity="left"
                        android:visibility="invisible"/>
                    <Spinner
                        android:id="@+id/spnr_driver_fname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/erp_height"
                        android:background="@drawable/erp_etborder"
                        android:hint="@string/driver_fname"
                        android:dropDownWidth="fill_parent"
                        android:spinnerMode="dropdown"
                        android:layout_weight="1"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btmbutns"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/clr_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/erp_clear_btn"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/erp_clr_button"
            android:layout_margin="2dp"
            android:onClick="callback"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/erp_sub_btn"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/states_nice_button"
            android:layout_margin="2dp"
            android:onClick="callMainAct"/>
    </LinearLayout>
</RelativeLayout>