<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:background="@drawable/errordialog_bg"
    android:gravity="center_horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/confirm_dlg_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:ems="6"
        android:padding="5dp"
        android:text="@string/delete_trip"
        android:textColor="#036194"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/confirm_gray1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/confirm_dlg_title_tv"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#BCB8B8"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/confirm_dlg_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_gray1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/confirm_dlg_main_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:gravity="center"
	        android:visibility="gone"/>
        
        
        <RelativeLayout 
		    android:id="@+id/confirm_dlg_src_dest_rl"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		    <TextView 
		        android:id="@+id/confirm_dlg_src_tv"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentStart="true"
			    android:layout_toLeftOf="@+id/confirm_dlg_to_iv"
			    android:layout_toStartOf="@+id/confirm_dlg_to_iv"
			    android:layout_centerVertical="true"
			    android:gravity="end"
			    android:padding="5dp"
			    android:textAppearance="?android:attr/textAppearanceSmall"
			    android:textColor="#565656"	/>
		    <ImageView 
		        android:id="@+id/confirm_dlg_to_iv"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"	     
			    android:layout_marginLeft="10dp"
			    android:layout_marginStart="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginEnd="10dp"
			    android:gravity="center_vertical"
			    android:layout_centerInParent="true"
			    android:padding="5dp"
			    android:src="@drawable/ic_to1"
			    android:contentDescription="@string/app_name"	/>
		    <TextView 
		        android:id="@+id/confirm_dlg_dest_tv"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:layout_toRightOf="@+id/confirm_dlg_to_iv"
			    android:layout_toEndOf="@+id/confirm_dlg_to_iv"
			    android:layout_marginRight="10dp"
			    android:layout_marginEnd="10dp"
			    android:padding="5dp"
			    android:layout_centerVertical="true"
			    android:textAppearance="?android:attr/textAppearanceSmall"
			    android:textColor="#565656"	/>
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/confirm_dlg_date_created_rl"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	     >
	    <TextView 
	        android:id="@+id/confirm_dlg_date_created_tv"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerHorizontal="true"
		    android:gravity="center_horizontal"
		    android:padding="5dp"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:textColor="#555555" />
	</RelativeLayout>
        
        <LinearLayout
	        android:id="@+id/confirm_dlg_btn_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"	        
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal"
	        android:weightSum="2" >
	        <Button
		        android:id="@+id/confirm_dlg_confirm_btn"
		        android:layout_width="100dp"
		        android:layout_height="50dp"
		        android:background="@drawable/alertbtnbg"
		        android:text="@string/delete_str"
		        android:layout_marginRight="15dp"		        
		        android:layout_marginEnd="15dp"
		        android:textColor="@android:color/white"
		        android:layout_weight="1" />

		    <Button
		        android:id="@+id/confirm_dlg_cancel_btn"
		        android:layout_width="100dp"
		        android:layout_height="50dp"
		        android:layout_marginLeft="15dp"		        
		        android:layout_marginStart="15dp"
		        android:background="@drawable/alertbtnbg"
		        android:text="@string/cancel"
		        android:textColor="@android:color/white"
		        android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>