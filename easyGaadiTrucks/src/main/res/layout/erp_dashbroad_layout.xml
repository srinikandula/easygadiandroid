<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e1e1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/revenueLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/erp_effect_bg"
                        android:paddingLeft="@dimen/margin_10"
                        >

                        <!--<ImageView
                            android:id="@+id/revenueimageView1"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/erp_truck"
                            ></ImageView>-->

                        <TextView
                            android:id="@+id/revenuetextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="2dp"
                            android:ellipsize="marquee"
                            android:text="Vehicle Revenue"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/actionbar_clr"></TextView>

                        <TextView
                            android:id="@+id/revenue_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/revenuetextView1"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="2dp"
                            android:ellipsize="marquee"
                            android:text="From All Vechicles"
                            android:textAppearance="?android:attr/textAppearanceSmall"></TextView>

                        <TextView
                            android:id="@+id/revenueamt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/revenue_mode"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="2dp"
                            android:ellipsize="marquee"
                            android:text="XXXX"
                            android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/expenseLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/erp_effect_bg"
                        android:layout_margin="@dimen/margin_5">
                        <!--<ImageView
                            android:layout_height="64dp"
                            android:id="@+id/expenseimageView1"
                            android:layout_width="64dp"
                            android:src="@drawable/erp_truck"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>-->
                        <TextView
                            android:text="Expenses "
                            android:layout_height="wrap_content"
                            android:id="@+id/expensetextView1"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/actionbar_clr"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:ellipsize="marquee"></TextView>
                        <TextView
                            android:id="@+id/expense_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/expensetextView1"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="2dp"
                            android:ellipsize="marquee"
                            android:text="For All Vechicles"
                            android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
                        <TextView
                            android:text="xxxx"
                            android:layout_height="wrap_content"
                            android:id="@+id/expenseamt1"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/expense_mode"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="marquee"></TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/paymentsLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/erp_effect_bg">
                        <!--<ImageView
                            android:layout_height="64dp"
                            android:id="@+id/paymentsimageView1"
                            android:layout_width="64dp"
                            android:src="@drawable/erp_truck"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>-->
                        <TextView
                            android:text="Payment Receivables "
                            android:layout_height="wrap_content"
                            android:id="@+id/paymentstextView1"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/actionbar_clr"
                            android:layout_alignParentTop="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:ellipsize="marquee"></TextView>
                        <TextView
                            android:id="@+id/paymenyts_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/paymentstextView1"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="2dp"
                            android:ellipsize="marquee"
                            android:text="From All Parties"
                            android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
                        <TextView
                            android:text="TextView"
                            android:layout_height="wrap_content"
                            android:id="@+id/paymentsamt1"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/paymenyts_mode"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="marquee"></TextView>
                    </RelativeLayout>

                </LinearLayout>

            <RelativeLayout
                android:id="@+id/expiryLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_margin="@dimen/margin_5">

                <TextView
                    android:text="Expiry Details"
                    android:layout_height="wrap_content"
                    android:id="@+id/expirytextView1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:ellipsize="marquee"
                    android:textColor="@color/actionbar_clr"/>
                <TextView
                    android:text="For All Vechicles"
                    android:layout_height="wrap_content"
                    android:id="@+id/expiry_mode"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/expirytextView1"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:ellipsize="marquee"/>

                <LinearLayout
                    android:layout_below="@+id/expiry_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_below="@+id/expirytextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/permit_LL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:padding="@dimen/margin_5"
                            android:layout_margin="@dimen/margin_5"
                            android:onClick="CallActivty"
                            android:background="@drawable/erp_effect_bg">
                            <TextView
                                android:text="XX"
                                android:layout_height="wrap_content"
                                android:id="@+id/permit_num"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"
                                android:textStyle="bold"
                                android:textColor="@color/actionbar_clr"/>
                            <TextView
                                android:text="Permit"
                                android:layout_height="wrap_content"
                                android:id="@+id/permit_tv"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/poll_LL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:background="@drawable/erp_effect_bg"
                            android:padding="@dimen/margin_5"
                            android:layout_margin="@dimen/margin_5"
                            android:onClick="CallActivty">
                            <TextView
                                android:text="XX"
                                android:layout_height="wrap_content"
                                android:id="@+id/poll_num"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"
                                android:textStyle="bold"
                                android:textColor="@color/actionbar_clr"/>
                            <TextView
                                android:text="Pollution"
                                android:layout_height="wrap_content"
                                android:id="@+id/poll_tv"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/expirytextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/tax_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/erp_effect_bg"
                            android:layout_weight="1"
                            android:padding="@dimen/margin_5"
                            android:layout_margin="@dimen/margin_5"
                            android:onClick="CallActivty">
                            <TextView
                                android:text="XX"
                                android:layout_height="wrap_content"
                                android:id="@+id/tax_num"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"
                                android:textStyle="bold"
                                android:textColor="@color/actionbar_clr"/>
                            <TextView
                                android:text="Tax Due"
                                android:layout_height="wrap_content"
                                android:id="@+id/tax_tv"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/insurance_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/erp_effect_bg"
                            android:layout_weight="1"
                            android:padding="@dimen/margin_5"
                            android:layout_margin="@dimen/margin_5"
                            android:onClick="callMOdules">
                            <TextView
                                android:text="XX"
                                android:layout_height="wrap_content"
                                android:id="@+id/insurance_num"
                                android:layout_width="wrap_content"
                                android:layout_margin="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"
                                android:textStyle="bold"
                                android:textColor="@color/actionbar_clr"/>
                            <TextView
                                android:text="Insurance"
                                android:layout_height="wrap_content"
                                android:id="@+id/insurance_tv"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:ellipsize="marquee"/>

                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/fitness_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_5"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/erp_effect_bg">
                        <TextView
                            android:text="XX"
                            android:layout_height="wrap_content"
                            android:id="@+id/fitness_num"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="marquee"
                            android:textStyle="bold"
                            android:textColor="@color/actionbar_clr"/>
                        <TextView
                            android:text="Fitness"
                            android:layout_height="wrap_content"
                            android:id="@+id/fitness_tv"
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_centerHorizontal="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="marquee"
                            />

                    </LinearLayout>
                </LinearLayout>
               </LinearLayout>
            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>
    </ScrollView>
</FrameLayout>
