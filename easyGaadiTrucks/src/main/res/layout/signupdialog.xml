<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/errordialog_bg"
    android:padding="5dp" >

    <TextView
        android:id="@+id/forgotpwd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="@string/singup_str"
        android:textColor="@color/actionbar_clr"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/gray1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/forgotpwd_title"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/actionbar_clr"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/note_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gray1"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/actionbar_clr" />

    <EditText
        android:id="@+id/fullname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@android:drawable/editbox_background_normal"
        android:drawablePadding="3dp"
        android:ems="12"
        android:hint="@string/fullname_ht"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/mobile_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname_et"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@android:drawable/editbox_background_normal"
        android:drawablePadding="3dp"
        android:ems="12"
        android:hint="@string/mobile_ht"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/address_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/mobile_et"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@android:drawable/editbox_background_normal"
        android:drawablePadding="3dp"
        android:ems="12"
        android:gravity="top|start"
        android:hint="@string/address_ht"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/customertype_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address_et"
        android:layout_centerVertical="true"
        android:layout_margin="13dp"
        android:ems="4"
        android:gravity="start|center"
        android:text="@string/customertype_str"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blackblueshade" />

    <Spinner
        android:id="@+id/customertype_spn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_et"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/customertype_tv"
        android:layout_toRightOf="@+id/customertype_tv"
        android:background="@android:drawable/editbox_background"
        android:padding="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customertype_spn"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/login_btn"
            android:ems="6"
            android:padding="5dp"
            android:text="@string/singup_str"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/login_btn"
            android:ems="6"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>