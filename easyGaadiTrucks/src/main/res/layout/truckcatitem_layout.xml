<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/truckRegNo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/tratruck_icon"
                        android:ems="6"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_lastupadate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:maxLines="1"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/trunkDrName_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginBottom="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:text="Driver Name"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/call_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginBottom="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:background="#838282"
                            android:text="   Call  "
                            android:textColor="@color/white"
                            android:padding="5dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/permit_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_margin="3dp"
                            android:drawablePadding="8dp"
                            android:drawingCacheQuality="high"
                            android:drawableLeft="@drawable/ic_current_location"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:maxLines="1"
                            android:text="Permit            "
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/poll_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_margin="3dp"
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/ic_current_location"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:maxLines="1"
                            android:text="Pollution"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginBottom="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginStart="8dp"
                            android:drawablePadding="3dp"
                            android:drawableLeft="@drawable/ic_current_location"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:text="more...."
                            android:visibility="invisible"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ins_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_margin="3dp"
                            android:drawablePadding="8dp"
                            android:drawingCacheQuality="high"
                            android:drawableLeft="@drawable/ic_current_location"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:maxLines="1"
                            android:text="Insurance"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/fitness_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_margin="3dp"
                            android:drawablePadding="8dp"
                            android:maxLines="1"
                            android:drawableLeft="@drawable/ic_current_location"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:text="Fitness"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/more_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginBottom="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginStart="8dp"
                            android:drawablePadding="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#838282"
                            android:text="More...."/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/moredetask_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/moredetask_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#838282"
                    android:text="moredetask_tv ..."/>
            </LinearLayout>




        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>